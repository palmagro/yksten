send = function(){
    $("#ask").hide();
    $("#load").show();
    $.ajax({
       type: "POST",
       url: "/send",
       data: JSON.stringify($("#input").val()),
       dataType: "json",
       contentType: "application/json",
       success: function( data ) {
		   ask();	   
       },
       error: function( xhr ) {
            console.log(xhr);
		    $("#botText").html(xhr.responseText);
            $("#load").hide();
            $("#ask").show();
       },
       complete: function(data) {

       }
   });
}


